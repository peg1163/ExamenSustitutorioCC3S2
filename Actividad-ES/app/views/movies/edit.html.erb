<h2>Edit Existing Movie</h2>

<%= form_for @movie, url: movie_path(@movie), method: :put do |f| %>
  <%= f.label :title, 'Title', class: 'col-form-label' %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :rating, 'Rating', class: 'col-form-label' %>
  <%= f.select :rating, ['G','PG','PG-13','R','NC-17'], {}, { class: 'form-control col-1' } %>

  <%= f.label :release_date, 'Released On', class: 'col-form-label' %>
  <%= f.date_select :release_date, {}, class: 'form-control col-2 d-inline' %>

  <%= f.label :director, 'Director', class: 'col-form-label' %>
  <%= f.text_field :director, class: 'form-control' %>

  <br/>

  <%= f.submit 'Update Movie Info', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', movies_path, class: 'btn btn-secondary' %>
<% end %>
